{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@sdk/*": ["../chains/sdk/*"],
      "@1inch/byte-utils": ["./node_modules/@1inch/byte-utils"],
      "@1inch/cross-chain-sdk": ["./node_modules/@1inch/cross-chain-sdk"],
      "@bitcoinerlab/secp256k1": ["./node_modules/@bitcoinerlab/secp256k1"],
      "axios": ["./node_modules/axios"],
      "bip68": ["./node_modules/bip68"],
      "bitcoinjs-lib": ["./node_modules/bitcoinjs-lib"],
      "ecpair": ["./node_modules/ecpair"],
      "ethers": ["./node_modules/ethers"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
